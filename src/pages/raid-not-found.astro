---
import Layout from "@/layouts/main.astro";
import backgroundLaptop from "@/images/backgrounds/background-laptop.webp";

const title = "If you believe this to be in error, please email ";
---
<Layout title="main">
    <style>
        .glass-container {
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            padding: 3rem;
        }

        .error-code {
            font-size: 120px;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 20px;
            text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.3);
            animation: float 3s ease-in-out infinite;
        }

        .title {
            font-size: 42px;
            font-weight: 700;
            margin-bottom: 16px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            text-align: center;
            animation: float 3s ease-in-out infinite;
        }

        .subtitle {
            font-size: 18px;
            margin-bottom: 0;
            opacity: 0.95;
            line-height: 1.6;
            text-align: center;
        }

        .icon {
            font-size: 80px;
            margin-bottom: 20px;
            animation: bounce 2s ease-in-out infinite;
            text-align: center;
        }
        
        .email {
            color: inherit;
        }
        
        .email:hover {
            text-decoration: underline;
        }
        
        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-15px);
            }
        }

        @media (max-width: 600px) {
            .glass-container {
                padding: 2rem 1.5rem;
            }
            .error-code {
                font-size: 80px;
            }
            .title {
                font-size: 32px;
            }
            .subtitle {
                font-size: 16px;
            }
        }
    </style>

<div
  class="bg-cover bg-center h-screen relative"
  style={`background-image: url(${backgroundLaptop.src});`}
>
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div class="glass-container max-w-3xl w-full text-center">
      <div class="icon">üîç</div>
      <h2 class="title">RAiD not found</h2>
      <h1 class="text-raidPrimary font-light text-3xl sm:text-3xl">
        {title}
        <a class="email" href="mailto:contact@raid.org" target="_blank">
          contact@raid.org
        </a>
      </h1>
    </div>
  </div>
</div>
</Layout>

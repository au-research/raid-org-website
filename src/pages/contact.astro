---
import Layout from "@/layouts/main.astro";
import RaidButton from "@/components/layout-components/raid-button.astro";
---

<Layout title="main">
  <div
    class="mx-auto max-w-7xl sm:px-6 lg:px-8 gap-12 min-h-96 place-items-center"
  >
    <h1 class="text-raidPrimary font-semibold text-2xl py-12">Get in touch</h1>

    <div class="grid grid-cols-3">
      <div></div>
      <div class="h-full w-full py-12">
        <div
          class="bg-raidGray p-4 rounded shadow flex flex-col items-center justify-center text-center gap-2 h-full"
        >
          <svg
            class="w-36 h-36 rounded-full"
            xmlns="http://www.w3.org/2000/svg"
            height="40px"
            viewBox="0 -960 960 960"
            width="40px"
            fill="#368bcc"
            ><path
              d="M146.67-160q-27 0-46.84-19.83Q80-199.67 80-226.67v-506.66q0-27 19.83-46.84Q119.67-800 146.67-800h666.66q27 0 46.84 19.83Q880-760.33 880-733.33v506.66q0 27-19.83 46.84Q840.33-160 813.33-160H146.67ZM480-454.67 146.67-670v443.33h666.66V-670L480-454.67Zm0-66.66 330.67-212H150l330 212ZM146.67-670v-63.33V-226.67-670Z"
            ></path></svg
          >
          <RaidButton label="Send email" href="mailto:contact@raid.org" />
        </div>
      </div>
      <div></div>
    </div>
  </div>
</Layout>

---
import backgroundLaptop from "@/images/backgrounds/background-laptop.jpg";

const title =
  "A persistent identifier and global registry for identifying, tracking, and sharing research projects";
---

<div
  class="bg-cover bg-center min-h-[250px] sm:min-h-[380px] relative bg-transparent sm:bg-raid"
  style={`background-image: url(${backgroundLaptop.src});`}
>
  <div class="absolute inset-0 bg-white/70 sm:hidden"></div>
  <div class="absolute bottom-0 w-full">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 w-full">
        <div class="p-6 mb-8 sm:mb-12">
          <h1
            class="text-raidPrimary font-light text-2xl sm:text-3xl max-w-[280px] sm:max-w-md"
          >
            {title}
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>

---
import RaidButton from "@/components/layout-components/raid-button.astro";

import organisationIcon from "@/images/icons/organisation-icon.png";
import teamworkIcon from "@/images/icons/teamwork-icon.png";
import globalDataIcon from "@/images/icons/global-data-icon.png";
import fundingIcon from "@/images/icons/funding-icon.png";
import timeIcon from "@/images/icons/time-icon.png";

const tiles = [
  {
    title: "",
    description: "Empower and encourage your research organisation to get RAiD",
    icon: organisationIcon.src,
  },
  {
    title: "",
    description:
      "Customise and control the information your research organisation would like kept and shared for a RAiD project or activity",
    icon: teamworkIcon.src,
  },
  {
    title: "",
    description:
      "Accurately store and view RAiD metadata information whenever needed at any stage of a project or activity, including after its closure",
    icon: globalDataIcon.src,
  },
  {
    title: "",
    description:
      "Track future funding requirements, project outcomes and changes made over time for a RAiD project or activity",
    icon: fundingIcon.src,
  },
  {
    title: "",
    description:
      "Fast-track project administration and save considerable research time and money",
    icon: timeIcon.src,
  },
];
---

<div class="bg-raidSecondary">
  <div
    class="mx-auto max-w-7xl sm:px-6 lg:px-8 grid sm:grid-cols-5 grid-cols-1 gap-6 min-h-96 place-items-center"
  >
    {
      tiles.map((el) => (
        <div class="h-full w-full sm:py-12 py-2">
          <div class="bg-white flex flex-col items-center justify-start text-center gap-2 h-full p-2">
            <img src={el.icon} class="w-36 h-36 rounded-full" alt="" />
            <h2 class="text-lg text-raidTextPrimary">{el.title}</h2>
            <p class="text-xs font-light px-2">{el.description}</p>
          </div>
        </div>
      ))
    }
  </div>

  <div class="flex justify-center p-2">
    <RaidButton label="Learn more" href="https://raid.org/uses" />
  </div>
</div>

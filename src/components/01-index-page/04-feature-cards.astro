---
import planificationIcon from "@/images/icons/planification-icon.webp";
import nodesIcon from "@/images/icons/nodes-icon.webp";
import cognitiveExperience from "@/images/icons/cognitive-experience-icon.webp";
import backgroundLight from "@/images/backgrounds/background-light.webp";

const tiles = [
  {
    title: "Unambiguous identification",
    description:
      "Provide your research project with a unique persistent identifier tor discovery, reporting, and communication",
    icon: planificationIcon.src,
  },
  {
    title: "A global research project registry",
    description:
      "Combine all your research project information into standardised RAiD metadata records with multi-party access, a version history, and an automatically generated landing page",
    icon: nodesIcon.src,
  },
  {
    title: "Reporting and assessment",
    description:
      "Track and report your project's resourcing, inputs, and outputs over time to gain strategic insight into your projectâ€™s outcomes or impact",
    icon: cognitiveExperience.src,
  },
];
---

<div style=`background-image: url(${backgroundLight.src});` class="p-6">
  <div
    class="mx-auto max-w-7xl sm:px-6 lg:px-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-8 lg:gap-12 min-h-96 place-items-center"
  >
    {
      tiles.map((el) => (
        <div class="h-full w-full">
          <div class="bg-raidGray p-4 rounded shadow flex flex-col items-center justify-center text-center gap-2 h-full">
            <img src={el.icon} class="w-36 h-36 rounded-full" alt="" />
            <h2 class="text-xl">{el.title}</h2>
            <p class="text-xs font-light px-12">{el.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
